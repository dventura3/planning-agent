@prefix vocab: <http://www.example.org/vocab#>.
@prefix http: <http://www.w3.org/2011/http#>.
@prefix st: <http://www.mystates.org/states#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix iot: <https://iotdb.org/pub/iot#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.


{
  ?pump a vocab:IrrigationPump;
      iot:uuid ?id.
      
  ?state a st:State;
      log:includes { ?pump vocab:hasSwitchingState ?oldValue. }.

  ?newValue a xsd:boolean.
}
=>
{
  _:request http:methodName "PUT";
            http:body ?newSwitching;
            http:requestURI ("/actuators/" ?id "/" ?newValue);
            http:response [http:body ?pump].                    #but I return success or failure

  [ a st:StateTransition;
    st:typeOperation "replacement";
    st:oldComponent { ?pump vocab:hasSwitchingState ?oldValue. };
    st:newComponent { ?pump vocab:hasSwitchingState ?newValue. };
    st:originalState ?state
  ].

  ?pump iot:uuid ?id;
        iot:name ?name;
        iot:description ?desc;
        vocab:hasSwitchingState ?newValue.
}.